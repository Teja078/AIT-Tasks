from collections import defaultdict

class Graph:
    def __init__(self, vertices):
        self.V = vertices
        self.graph = defaultdict(list)

    def add_edge(self, u, v):
        self.graph[u].append(v)
        self.graph[v].append(u)

    # Greedy graph coloring
    def greedy_coloring(self):
        result = [-1] * self.V   # -1 means uncolored

        # Assign the first color to first node
        result[0] = 0

        # Available colors tracker
        available = [False] * self.V

        # Assign colors to remaining vertices
        for u in range(1, self.V):
            # Mark colors of adjacent vertices as unavailable
            for i in self.graph[u]:
                if result[i] != -1:
                    available[result[i]] = True

            # Find the first available color
            cr = 0
            while cr < self.V:
                if not available[cr]:
                    break
                cr += 1

            result[u] = cr  # Assign found color

            # Reset available for next iteration
            for i in self.graph[u]:
                if result[i] != -1:
                    available[result[i]] = False

        # Print coloring assignment
        for u in range(self.V):
            print(f"Zone {u} ---> Signal Color {result[u]}")


    # Suppose we have 6 zones
    g = Graph(6)
    
    # Add pathways (edges) between zones
    g.add_edge(0, 1)
    g.add_edge(0, 2)
    g.add_edge(1, 2)
    g.add_edge(1, 3)
    g.add_edge(2, 3)
    g.add_edge(3, 4)
    g.add_edge(4, 5)
    g.add_edge(2,2)
    
    print("Robot Traversal Signal Plan:")
    g.greedy_coloring()
